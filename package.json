{
  "name": "qbenben-vuepressblog",
  "private": true,
  "description": "qbenben's vuepress blog.",
  "license": "Apache-2.0",
  "author": "Qbenben <zhengqbbb@gmail.com>",
  "scripts": {
    "docs:build": "pnpm --filter=blog docs:build",
    "docs:dev": "pnpm --filter=blog docs:dev",
    "docs:serve": "pnpm --filter=blog docs:serve"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "cz-git": "^1.3.9",
    "eslint": "^8.19.0",
    "pnpm": "^7.9.3",
    "serve": "^13.0.4",
    "typescript": "^4.7.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "@types/react",
        "eslint-plugin-import",
        "eslint-plugin-n",
        "eslint-plugin-promise",
        "react",
        "react-dom",
        "webpack"
      ]
    }
  }
}
